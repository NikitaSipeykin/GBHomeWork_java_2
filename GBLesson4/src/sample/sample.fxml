<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<AnchorPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">

    <VBox AnchorPane.topAnchor="30"
    AnchorPane.leftAnchor="16"
    AnchorPane.rightAnchor="16"
    AnchorPane.bottomAnchor="30">

        <TextArea fx:id="chat" editable="false"

        />

        <TextField fx:id="text" promptText=" Wright your message..."

        />

    </VBox>

    <Button text="Send" onAction="#sendText" defaultButton="true"
            AnchorPane.rightAnchor="16"
            AnchorPane.bottomAnchor="30"
    />

</AnchorPane>
